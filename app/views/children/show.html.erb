<p style="color: green"><%= notice %></p>
  <p>
    <strong>Name:</strong>
    <%= @child.name %>
  </p>

  <p>
    <strong>Age:</strong>
    <%= @child.age %>
  </p>

  <p>
    <strong>Picture:</strong> <br>
    <%= image_tag(@child.picture.image, size: '200x200')  if @child.picture.image.attached?  %>
  </p>
  Address:
  <p>
    <strong>Street:</strong>
    <%= @child.address.street %>
  </p>
    <p>
    <strong>City:</strong>
    <%= @child.address.city %>
  </p>
    <p>
    <strong>State:</strong>
    <%= @child.address.state %>
  </p>
    <p>
    <strong>Zipcode:</strong>
    <%= @child.address.zipcode %>
  </p>
    <p>
    <strong>Country:</strong>
    <%= @child.address.country %>
  </p>

<h3>
  Child Pods History
</h3>
<br>

  <p>
    <strong>Active Pod</strong>
    <br>
    <strong>Name:</strong>
    <%= @child.active_pods.name %>
  </p>
  <p>
    <strong>Pending Pods</strong>
    <br>
    <% @child.child_pods.where(status: "pending").each do |pn| %>
      <strong>Name:</strong>
      <%= pn.pod.name %><br>
    <% end %><br>
  </p>
  <p>
    <strong>Rejected Pods</strong>
    <br>
    <% @child.child_pods.where(status: "rejected").each do |rj| %>
      <strong>Name:</strong>
      <%= rj.pod.name %><br>
    <% end %><br>
  </p>
  <p>
    <strong>Inactive Pods</strong>
    <br>
    <% @child.child_pods.where(status: "inactive").each do |ina| %>
      <strong>Name:</strong>
      <%= ina.pod.name %><br>
    <% end %><br>
  </p>

<div>
  <%= link_to "Edit this child", edit_child_path %> |
  <%= link_to "Back to children", parent_children_path([current_parent, @child]) %>
  <%= button_to "Destroy this child", [@parent, @child], method: :delete %>
</div>
