
<% if @review.errors.any? %>
    <%# This removes any error messages that were previously generated. %>
    document.querySelector('#error_explanation') ? document.querySelector('#error_explanation').remove() : null ;
    <%# This selects the `<form>` in and dynamically injects the `app/views/shared/_validation-messages.html.erb` partial. %>
    document.querySelector('#reviews-form').insertAdjacentHTML('afterbegin', '<%= escape_javascript(render "shared/validation-messages", object: @review) %>');
<% else %>
    <%# This removes any error messages that were previously generated. %>
    document.querySelector('#error_explanation') ? document.querySelector('#error_explanation').remove() : null ;
    <%# This selects `<div id="reviews">` and dynamically injects the `app/views/comments/_comment.html.erb` partial. %>
    document.querySelector('#reviews').insertAdjacentHTML('afterbegin', '<%= escape_javascript(render @review) %>') ;
    <%# This selects the `<form>` and resets the text area. %>
     document.querySelector('#review_review').value = ""
<% end %>
